@page "/error"
@model ErrorModel
@{
    ViewData["Title"] = "Error";
    Layout = "_Layout";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/css/error.css">
    <title>ERROR</title>
    <style>
        #container-error {
            width: 100%;
            display: table;
            height: 95vh;
            background: #fff;
        }

        .container-error {
            display: table-cell;
            vertical-align: middle;
            text-align: center;
        }

            .container-error .title-error {
                font-size: 44px;
                font-weight: 700;
                color: #d87070;
                margin: 0 0 0.25em;
                padding: 0;
                text-transform: uppercase;
            }

            .container-error .content-error {
                margin: 10px auto;
                padding: 0 20px;
                font-size: 16px;
                color: #333;
            }

            .container-error .chuyentrang {
                color: #777;
                border: 2px solid #ccc;
                font-size: 14px;
                font-weight: 500;
                text-transform: uppercase;
                padding: 5px 30px;
                display: inline-block;
                margin: 20px 2px;
                border-radius: 100px;
                text-decoration: none;
            }

    </style>
</head>

<body>
    <div id="container-error">
        <div class="container-error">
            <h1 class="title-error">PAGE NOT FOUND</h1>
            <h2 class="title-error"><i class="fa-thin fa-face-confounded"></i></h2>
            <p class="content-error">The page you're going "@ViewData["OriginalPathAndQuery"]" to doesn't seem to exist.</p>
            <p class="content-error">Make sure you entered the correct URL, check again, please!</p>
            <p>
                <a class="chuyentrang" href="@(User.Identity.IsAuthenticated ? User.IsInRole("admin") ? "/admin" : "/dashboard" : "/")" title="Home Page">Home</a>
            </p>
        </div>
    </div>
</body>
</html>
